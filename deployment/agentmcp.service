[Unit]
Description=AgentMCP v2 - Agent Ecosystem MCP Server
Documentation=https://github.com/aminghadersohi/agentmcp
After=network.target postgresql.service
Wants=postgresql.service

[Service]
Type=simple
User=mcp
Group=mcp
WorkingDirectory=/opt/agentmcp

# Binary location - v2 requires database connection
ExecStart=/opt/agentmcp/agentmcp \
    -transport sse \
    -port 18080

# Restart policy
Restart=always
RestartSec=10s

# Environment variables for v2
Environment="MCP_TRANSPORT=sse"
Environment="MCP_PORT=18080"

# Database connection (adjust for your PostgreSQL setup)
Environment="DB_HOST=localhost"
Environment="DB_PORT=5432"
Environment="DB_NAME=agentmcp"
Environment="DB_USER=mcp"
# DB_PASSWORD should be set via EnvironmentFile for security
# Environment="DB_PASSWORD=your_password"

# Embedding service (optional - for semantic search)
Environment="EMBEDDING_TYPE=http"
Environment="EMBEDDING_URL=http://localhost:8081"

# Load secrets from environment file
EnvironmentFile=-/opt/agentmcp/agentmcp.env

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/agentmcp

# Resource limits
LimitNOFILE=65536
MemoryLimit=200M
CPUQuota=100%

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=agentmcp

[Install]
WantedBy=multi-user.target
